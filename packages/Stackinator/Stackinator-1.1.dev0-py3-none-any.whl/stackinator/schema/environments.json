{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Spack Stack environments.yaml recipe file",
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
         "\\w[\\w-]*": {
             "type": "object",
             "required": ["compiler", "specs"],
             "additionalProperties": false,
             "properties": {
                 "unify": {
                     "enum": ["when_possible", true, false],
                     "default": true
                 },
                 "compiler": {
                     "type": "array",
                     "items": {
                         "type": "object",
                         "additionalProperties": false,
                         "properties": {
                             "toolchain": {"type": "string"},
                             "spec":      {"type": "string"}
                         }
                     }
                 },
                 "specs": {
                     "type": "array",
                     "items": {"type": "string"}
                 },
                 "variants": {
                     "type": "array",
                     "items": {"type": "string"},
                     "default": []
                 },
                 "mpi": {
                     "oneOf": [
                         {
                             "type": "object",
                             "additionalProperties": false,
                             "properties": {
                                 "spec": {"type": "string"},
                                 "gpu":  {"enum": ["cuda", "rocm", null, false]}
                             }
                         },
                         {"enum": [null, false]}
                     ],
                     "default": null
                 },
                 "packages": {
                     "type": "array",
                     "items": {"type": "string"},
                     "default": []
                 }
             }
         }
     }
}

