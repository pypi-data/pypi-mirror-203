{
    "manifest_version": "1",
    "task_list": [
        {
            "name": "Create OME-Zarr structure",
            "input_type": "image",
            "output_type": "zarr",
            "default_args": {
                "image_extension": "tif",
                "num_levels": 2,
                "coarsening_xy": 2,
                "metadata_table": "mrf_mlf"
            },
            "executable": "create_ome_zarr.py",
            "meta": {
                "executor": "cpu-low",
                "cpus_per_task": 1,
                "mem": 4000
            }
        },
        {
            "name": "Convert Yokogawa to OME-Zarr",
            "input_type": "zarr",
            "output_type": "zarr",
            "executable": "yokogawa_to_ome_zarr.py",
            "meta": {
                "executor": "cpu-low",
                "parallelization_level": "image",
                "cpus_per_task": 1,
                "mem": 4000
            }
        },
        {
            "name": "Copy OME-Zarr structure",
            "input_type": "zarr",
            "output_type": "zarr",
            "default_args": {
                "project_to_2D": true,
                "suffix": "mip"
            },
            "executable": "copy_ome_zarr.py",
            "meta": {
                "executor": "cpu-low",
                "cpus_per_task": 1,
                "mem": 1000
            }
        },
        {
            "name": "Maximum Intensity Projection",
            "input_type": "zarr",
            "output_type": "zarr",
            "executable": "maximum_intensity_projection.py",
            "meta": {
                "executor": "cpu-low",
                "parallelization_level": "image",
                "cpus_per_task": 1,
                "mem": 4000
            }
        },
        {
            "name": "Cellpose Segmentation",
            "input_type": "zarr",
            "output_type": "zarr",
            "executable": "cellpose_segmentation.py",
            "meta": {
                "executor": "gpu",
                "parallelization_level": "image",
                "cpus_per_task": 4,
                "mem": 16000,
                "needs_gpu": true
            }
        },
        {
            "name": "Illumination correction",
            "input_type": "zarr",
            "output_type": "zarr",
            "default_args": {
                "overwrite": false,
                "background": 100
            },
            "executable": "illumination_correction.py",
            "meta": {
                "executor": "cpu-low",
                "parallelization_level": "image",
                "cpus_per_task": 1,
                "mem": 4000
            }
        },
        {
            "name": "Napari workflows wrapper",
            "input_type": "zarr",
            "output_type": "zarr",
            "default_args": {
                "input_ROI_table": "FOV_ROI_table",
                "level": 0,
                "relabeling": true,
                "expected_dimensions": 3
            },
            "executable": "napari_workflows_wrapper.py",
            "meta": {
                "executor": "cpu-low",
                "parallelization_level": "image",
                "cpus_per_task": 8,
                "mem": 32000
            }
        },
        {
            "name": "Create OME-ZARR structure (multiplexing)",
            "input_type": "image",
            "output_type": "zarr",
            "default_args": {
                "image_extension": "tif",
                "num_levels": 2,
                "coarsening_xy": 2,
                "metadata_table": "mrf_mlf"
            },
            "executable": "create_ome_zarr_multiplex.py",
            "meta": {
                "executor": "cpu-low",
                "cpus_per_task": 1,
                "mem": 4000
            }
        }
    ]
}
